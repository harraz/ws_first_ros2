{
  "name": "ROS 2 Dev (ws_first_ros2)",
  "remoteUser": "harraz",
  "updateRemoteUserUID": false,
  "privileged": true,

  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "USERNAME": "harraz"
    }
  },

  // Mount the project root as the workspace root inside the container
  "workspaceFolder": "/projects/ws_first_ros2",
  "workspaceMount": "source=${localWorkspaceFolder},target=/projects/ws_first_ros2,type=bind",

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cpptools-themes",
        "twxs.cmake",
        "donjayamanne.python-extension-pack",
        "eamodio.gitlens",
        "ms-iot.vscode-ros"
      ]
    }
  },

  "containerEnv": {
    "ROS_LOCALHOST_ONLY": "1",
    "ROS_DOMAIN_ID": "42",
    "QT_X11_NO_MITSHM": "1"
  },

  "runArgs": [
    "--net=host",
    "-e", "DISPLAY=${env:DISPLAY}",
    "--dns=8.8.8.8",
    "--dns=1.1.1.1",
    "-e", "DISPLAY=${env:DISPLAY}",
    "-e", "QT_X11_NO_MITSHM=1"
  ],

  "mounts": [
    // X11 socket from your HOME mirror (avoids Docker Desktop /tmp restriction)
    "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind",
    // Cache dirs (exist on host, map to predictable paths in container)
    "source=${localWorkspaceFolder}/cache/iron/build,target=/projects/ws_first_ros2/build,type=bind",
    "source=${localWorkspaceFolder}/cache/iron/install,target=/projects/ws_first_ros2/install,type=bind",
    "source=${localWorkspaceFolder}/cache/iron/log,target=/home/harraz/projects/ws_first_ros2/log,type=bind"
  ],

  // Run rosdep from the repo root (not 'src'), since workspaceFolder is the root
  "postCreateCommand": "cd /home/harraz/projects/ws_first_ros2 && sudo rosdep update && sudo rosdep install --from-paths . --ignore-src -r -y && sudo chown -R $(id -un) /home/harraz/projects/ws_first_ros2"
}

